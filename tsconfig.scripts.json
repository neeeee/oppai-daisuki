{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "strict": true
  },
  "include": ["models/**/*.ts", "scripts/**/*.ts"]
}
