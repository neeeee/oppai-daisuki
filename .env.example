# Database Configuration
MONGODB_URI=mongodb://localhost:27017/oppai-daisuki

# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secure-secret-key-here-64-characters-minimum

# Admin Authentication (Generate using: node scripts/setup-admin.js)
ADMIN_EMAIL=admin@yourdomain.com
ALLOW_ADMIN_ON_MAIN_SITE=false
ADMIN_URL=http://localhost:3000 # if ALLOW_ADMIN_ON_MAIN_SITE is false
ADMIN_PASSWORD_HASH_BASE64=your-bcrypt-hashed-password-here

# JWT Configuration
JWT_SECRET=your-jwt-secret-32-characters-min

# Security Settings (Optional - Uncomment to enable)
ALLOWED_ADMIN_IPS=127.0.0.1,::1,192.168.1.100  # Comma-separated list of allowed IPs
# STRICT_IP_CHECK=true                             # Enforce IP consistency for sessions

# Production Security Settings
# NODE_ENV=production
# NEXTAUTH_URL=https://yourdomain.com

# Rate Limiting Configuration (Optional - defaults shown)
# MAX_LOGIN_ATTEMPTS=5
# LOCKOUT_TIME_MS=900000  # 15 minutes in milliseconds
# SESSION_MAX_AGE=1800    # 30 minutes in seconds

# UploadThing Configuration (if using file uploads)
# UPLOADTHING_TOKEN=your-uploadthing-secret
# UPLOADTHING_APP_ID=your-uploadthing-app-id

# Additional Security Headers (Optional - for advanced configurations)
# CSP_REPORT_URI=/api/csp-report
# HSTS_MAX_AGE=31536000

# Development Settings
# DEBUG_AUTH=true  # Enable auth debugging in development only

# Monitoring and Logging (Optional)
# LOG_LEVEL=info
# ENABLE_AUDIT_LOGS=true

